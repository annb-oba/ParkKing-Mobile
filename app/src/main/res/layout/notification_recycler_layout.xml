<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10dp"
    android:id="@+id/notification_linearLayout"
    android:background="@color/colorSelectedGray"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/logo_non_transparent"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_title"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textColor="@color/colorOffBlack"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/notification_message"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a test message for the notification. This is a test message for the notification. This is a test message for the notification."
            android:gravity="center|left"
            android:fontFamily="@font/open_sans"
            android:textSize="12sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/notification_date"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oct 11, 2018 12:21PM"
            android:textColor="@color/colorOffBlack"
            android:textSize="10sp"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>